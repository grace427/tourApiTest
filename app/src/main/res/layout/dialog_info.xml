<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txt_Detail_info"
        android:layout_width="284dp"
        android:layout_height="224dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="textAutoComplete|textMultiLine"
        android:scrollbars="vertical"
        android:text="상세정보"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/img_Datail_info"
        android:layout_width="140dp"
        android:layout_height="153dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="132dp"
        android:layout_height="214dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/txt_Detail_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_Datail_info"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 : "
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/txt_Detail_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-000-0000"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:text="주소 : "
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="96dp" />

        <TextView
            android:id="@+id/txt_Detail_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="서울시"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="96dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈페이지 : "
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="145dp" />

        <TextView
            android:id="@+id/txt_Detail_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="145dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>